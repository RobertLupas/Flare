{
  "name": "Flare",
  "description": "Flare is a modern UI toolkit for building beautiful desktop apps with Electron.",
  "version": "0.1.0",
  "author": "Robert Lupas",
  "repository": "https://github.com/half-real-SCRACX/Flare",
  "license": "GPL-3.0",
  "main": "flare.min.css",
  "files": [
    "flare.min.css"
  ],
  "scripts": {
    "build": "sass --style=compressed --no-source-map ./src/main.scss ./flare.min.css && sass --no-source-map ./src/main.scss ./flare.css",
    "watch": "sass --watch --no-source-map ./src/main.scss ./flare.css"
  },
  "keywords": [
    "css",
    "sass",
    "scss",
    "semantic",
    "html5",
    "framework",
    "electron",
    "electron.js"
  ],
  "devDependencies": {
    "sass": "^1.63.3"
  }
}
